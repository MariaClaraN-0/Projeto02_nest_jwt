// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id            Int       @default(autoincrement()) @id
  nome String
  senha String 
  imagem String
  bio String
  nascimento DateTime
  seguidores Seguidores[]
  criado_em DateTime
  seguindo Seguindo[]
  modificado_em DateTime
  tweet Tweet[]


}

model Seguidores {
  id            Int       @default(autoincrement()) @id
  seguidores Usuario? @relation(fields: [seguidorId], references: [id]) 
  seguidorId Int
}

model Seguindo {
  id            Int       @default(autoincrement()) @id
  seguindo Usuario? @relation(fields: [seguindoId], references: [id]) 
  seguindoId Int
}

model Tweet {
  id            Int       @default(autoincrement()) @id
  texto String
  emoji String
  data_postagem DateTime
  curtidas Int
  tweet Usuario? @relation(fields: [tweetId], references: [id]) 
  tweetId Int

}
